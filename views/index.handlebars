{{!-- 
* Setup the `index.handlebars` to have the template that Handlebars can render onto.
* Create a button in `index.handlebars` that will submit the user input into the database.
--}}

<div id="container">
  <div class="container-inner">
      <h1>The Menu</h1>
        {{#each burgers}}
          {{#unless this.devoured}}
          <div class="burger">

            <p class="menuItem"> {{this.burger_name}} </p>

              <form id="burgerButton" action="burgers/update/devour/{{this.id}}?_method=PUT" method="POST">
                <button class="btn btn-primary" type="submit">Eat This Burger</button>
              </form>
</div>

          {{/unless}}
        {{/each}}
    </div>
    <div class="container-inner">
      <h1>Devoured Burgers</h1>
      <ul id="devoured-burgers">
        {{#each burgers}}
          {{#if this.devoured}}
            <li>{{this.burger_name}}</li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class="container-inner make-burger">
        <h1>Make Your Own!</h1>
        <form action="burgers/create" method="POST">
          <div class="form-group">
            <input type="text" id="burgerInput" name="name" class="form-control" placeholder="Give your burger a name" required />
          </div>
          <button class="btn btn-primary" type="submit">Make Burger</button>
          <div class="clear"></div>
        </form>
      </div>
    </div>